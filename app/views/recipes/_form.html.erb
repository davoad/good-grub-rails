<%= simple_form_for(@recipe, html: { class: 'form-vertical' }, wrapper: :vertical_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :publication %>
    <%= link_to "New Publication", 'new_publication', id: 'new_publication', remote: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
